{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "lib": [
      "es2019"
    ]
  },
  "include": [
    "src",
    "templates/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}